<%- include('partials/header'); %>
<title><%= categoryname %></title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-info">
    <div class="container-fluid">
      <a class="navbar-brand logo" href="/">DIG</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/manageimages/<%= categoryname %>">Manage Images</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <h1 class="gallery-title my-4"><%= categoryname %></h1> %>


  <div class="container">

    <div class="row">
      <% images.forEach(function(image) { %>
      <div class="col-12 col-md-6 col-lg-4 my-2">
        <a href="data:<%=image.img.contentType%>;base64,
      <%=image.img.data.toString('base64')%>" data-fancybox="images" data-caption="<%= image.desc %>">
        <div class="img-bounding">
          <img class="img-scale" src="data:<%=image.img.contentType%>;base64,
        <%=image.img.data.toString('base64')%>">
          <div class="img-overlay">
            <h5 class="img-title"><%= image.title %></h5>
            <p class="img-description"><%= image.desc %></p>
          </div>
        </div>
        </a>
      </div>
      <% }); %>

    </div>
  </div>


  <%-include('partials/footer') %>
