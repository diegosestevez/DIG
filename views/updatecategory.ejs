<%- include('partials/header'); %>
	<title>Update <%=title%></title>
</head>

<body>


	<div class="card container mt-4">
		<div class="card-body">
		<h1><%= title %> </h1>
		<form action="/updatecategory" method="POST">
			<div class="form-group my-3">
				<label>Category Name</label>
				<input class="form-control" type="text" id="title" name="title" placeholder="<%= title %>" required>
			</div>
			<div class="form-group my-3">
				<label>Category Description</label>
				<textarea id="desc" class="form-control" name="desc" placeholder="<%= desc %>" required>
				</textarea>
			</div>
			<input type="hidden" name="hidden" value="<%=title%>">
			<div>
				<button class="btn btn-warning mt-4" type="submit">Update Category</button>
				<a class="btn btn-danger mt-4" href="/managecategories">Cancel</a>
			</div>
		</form>
</div>
</div>


<%-include('partials/footer') %>
