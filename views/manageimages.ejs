<%- include('partials/header'); %>
	<title>Manage <%= categoryname %> Images</title>
</head>

<body>

	<div class="card container mt-4">
		<div class="card-body">
			<h1><%= categoryname %></h1>

			<table class="table">
				<thead>
					<tr>
						<th>Image Name</th>
						<th>Image Discription</th>
						<th>Delete image</th>
					</tr>
				</thead>
				<tbody>
					<% images.forEach(function(image){ %>
					<tr>
						<td> <%= image.title %> </td>
						<td> <%= image.desc %></td>
						<td>
							<form action="/deleteimage" method="post">
								<button class="btn btn-danger" type="submit" name="delete" value="<%= image.title %>">Delete</button>
								<input type="hidden" name="hidden" value="<%= categoryname %>">
							</form>
						</td>
					</tr>
					<% }); %>
				</tbody>
			</table>
			<div>
					<a class="btn btn-secondary" href="/<%= categoryname %>">Exit</a>
				<button type="button" class="btn btn-info" data-toggle="modal" data-target="#modalMenu">
					Insert New Image
				</button>
			</div>

		</div>
	</div>

	<div class="modal fade" id="modalMenu" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
		<div class="modal-dialog modal-xl">
			<div class="modal-content container">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="card-body">
						<h1>New Image</h1>
						<form action="/<%= categoryname %>" method="POST" enctype="multipart/form-data">
							<div class="form-group my-3">
								<label for="name">Add New Image</label>
								<input class="form-control" type="text" id="title" name="title" required>
							</div>
							<div class="form-group my-3">
								<label for="desc">Image Description</label>
								<textarea id="desc" class="form-control" name="desc" required>
								</textarea>
							</div>
							<div class="form-group my-3">
								<label for="image">Upload Image</label>
								<input class="form-control-file" type="file" id="image" name="image" required>
							</div>
							<div>
								<input type="hidden" name="hidden" value="<%=categoryname%>">
							</div>
							<div>
								<button type="button" class="btn btn-secondary my-4" data-dismiss="modal">Close</button>
								<button class="btn btn-info my-4" type="submit">Add Image</button>
							</div>
						</form>
					</div>

				</div>
			</div>
		</div>
	</div>

<%-include('partials/footer') %>
